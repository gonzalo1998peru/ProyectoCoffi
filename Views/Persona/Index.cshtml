@model Persona  

@{
    ViewData["Title"] = "Registrate";
}

<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <form asp-controller="Persona" asp-action="Create">
        <div class="form-group">
            <label asp-for="nombres">Nombre:</label>
            <input asp-for="nombres" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="apellidos">apellido:</label>
            <input asp-for="apellidos" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="dni">DNI:</label>
            <input asp-for="dni" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="direccion">Direccion:</label>
            <input asp-for="direccion" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="celular">Celular:</label>
            <input asp-for="celular" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Enviar Consulta</button>
    </form>
    <h1>@ViewData["Message"]</h1>
</div>
